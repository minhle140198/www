{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "docs/",
      "dist",
      "node_modules/"
    ]
  },
  "jsRules": {},
  "rules": {
    "semicolon": true,
    "trailing-comma": true,
    "arrow-parens": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "no-shadowed-variable": true
  },
  "rulesDirectory": []
}
